<!DOCTYPE html>
<html lang="<%- settingGeneral.languaje.Spanish %>">
  <!--HEAD-->
  <%- include("partials/head.ejs") %>
  <body>
    <header><%- include('./partials/header')%></header>

    <main>
      <div class="content">
        <h1>Bienvenido a <%- index.name.toUpperCase() %></h1>

        <!--Cards-->
        <div class="content">
          <% for(let product of products) { %>
          <div class="card">
            <div class="card-image">
              <img
                src="<%= product.urlImg %> "
                height="300px"
                width="300px"
                alt="<%= product.name %> "
              />
            </div>
            <div class="card-body">
              <div class="grid">
                <div class="row">
                  <p class="title"><%= product.name %></p>
                </div>
                <div class="row">
                  <div class="column">
                    <div class="buttons">
                      <button class="detalle">Ver detalle</button>
                      <button class="agregar-carrito">
                        Agregar al
                        <span class="iconify" data-icon="bytesize:cart"></span>
                      </button>
                    </div>
                  </div>
                  <div class="column">
                    <div class="cost">
                      <p class="price">
                        $<%=
                        Math.round(product.price*(1-(((product.discount>0)?product.discount:0)/100)))
                        %>
                      </p>
                      <% if (product.discount>0) { %>
                      <p class="offer"><%= product.discount %> % OFF</p>
                      <p class="price-normal">$<%= product.price %></p>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% } %>
        </div>

        <!--Cards-->
      </div>
    </main>

    <footer><%- include('./partials/footer')%></footer>
    +
  </body>
</html>
