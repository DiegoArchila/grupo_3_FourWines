<!--
    Objects needs for works
    
-->
<!DOCTYPE html>
<html lang="<%- settingGeneral.languaje.Spanish %>">
    <!--HEAD-->
    <%- include("../partials/head.ejs") %>
    <body>

        <!--HEADER-->
        <%- include('../partials/header.ejs')%>

        
        <!--Se pasa el objeto a miniBanner-->
        <!--MiniBanner-->
        <% minibar = {
            title:"Admin",
            icon:"eos-icons:admin-outlined"
        } %> 
        <%- include('../partials/miniBanner.ejs')%>

        <!--MAIN-->
        <main>
            <!--AdminBar-->
            <%- include('../components/adminBar.ejs')%>
            <section class="user">
                <nav class="user__bar flx-ctr">
                    <h1 class="user__barTitle">Detalles usuario</h1>
                </nav>
                <form action="/admin/user" method="post" class="user__container">
                    
                    <!--names-->
                    <label class="user__inputText" for="">
                        Nombres *
                    </label>
                    <input type="text" name="firstName" id="" required minlength="2" maxlength="128"
                    placeholder="Ingrese los nombres...">

                    <!--last names-->
                    <label class="user__inputText" for="">
                        Apellidos *
                    </label>
                    <input type="text" name="lastName" id="" required minlength="2" maxlength="128"
                    placeholder="Ingrese los apellidos...">

                    <!--Display Elements by row in flex-->
                    <div class="flx-ctr">
                        <div class="user__containerMiddle">
                            <!--date born-->
                            <label class="user__inputText" for="">
                                Fecha de nacimiento *
                            </label>
                            <input type="date" name="dateBorn" id="" required >
                        </div>
    
                        <div class="user__containerMiddle">
                            <!--Category-->
                            <label class="user__inputText">
                                Genero *
                            </label>
                            <select name="gender" id="gender" class="user__inputGender" required>
                                <option value="">Seleccione</option>
                                <option value="1">Hombre</option>
                                <option value="2">Mujer</option>
                                <option value="3">No definido</option>
                            </select>
                        </div>
                    </div>
                    
                    <!--email-->
                    <label class="user__inputText" for="">
                        Email *
                    </label>
                    <input type="email" name="mail" id="mail" required minlength="2" maxlength="128 "
                    placeholder="Ingrese el email">

                    <!--Country-->
                    <label class="user__inputText" for="">
                        Pais *
                    </label>
                    <input type="text" name="country" id="" required minlength="2" maxlength="128"
                    placeholder="Ingrese el país...">

                    <!--province state-->
                    <label class="user__inputText" for="">
                        Provincia/Estado *
                    </label>
                    <input type="text" name="province-state" id="" required minlength="2" maxlength="128"
                    placeholder="Ingrese la provincia o estado...">

                    <!--City town-->
                    <label class="user__inputText" for="">
                        Ciudad/Pueblo *
                    </label>
                    <input type="text" name="city-town" id="" required minlength="2" maxlength="128"
                    placeholder="Ingrese la ciudad o el pueblo...">

                    <!--Address line-->
                    <label class="user__inputText" for="">
                        Dirección *
                    </label>
                    <input type="text" name="address" id="" required minlength="2" maxlength="128"
                    placeholder="Ingrese la dirección...">

                    <!--Password-->
                    <label class="user__inputText" for="">
                        Contraseña *
                    </label>
                    <input type="password" name="password" id="" required minlength="2" maxlength="64"
                    placeholder="Ingrese la contraseña...">
                    <input type="password" name="passwordRetry" id="" required minlength="2" maxlength="64"
                    placeholder="Repita la contraseña...">
                </form>
            </section>
        </main>
        
    
        <!--FOOTER-->
        <%- include('../partials/footer.ejs') %> 
        
    </body>
</html>